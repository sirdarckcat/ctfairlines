 <PropertyList>
  <particlesystem>
    <name>gear smoke</name>
  <texture>smoke.png</texture> 
    <emissive>false</emissive>
    <lighting>false</lighting>
    
    <offsets>
      <x-m>0</x-m>
      <y-m>0</y-m>
      <z-m>0</z-m>
      <pitch-deg>90</pitch-deg>
    </offsets>
    
    <attach>world</attach>
    
    <placer>
      <type>point</type>
    </placer>
    
    		<shooter>
			<theta-min-deg>45</theta-min-deg>
			<theta-max-deg>85</theta-max-deg>
			<phi-min-deg>-60</phi-min-deg>
			<phi-max-deg>60</phi-max-deg>
			<speed-mps>
				<value>50</value>
				<spread>5</spread>
			</speed-mps>
			<rotation-speed>
				<x-max-deg-sec>15</x-max-deg-sec>
				<x-min-deg-sec>-15</x-min-deg-sec>
				<y-max-deg-sec>15</y-max-deg-sec>
				<y-min-deg-sec>-15</y-min-deg-sec>
				<z-max-deg-sec>15</z-max-deg-sec>
				<z-min-deg-sec>-15</z-min-deg-sec>
			</rotation-speed>
		</shooter>

		<counter>
			<particles-per-sec>
				<value>150</value>
				<spread>100</spread>
			</particles-per-sec>
		</counter>
      
  <condition>
		 <and>
			 <greater-than>
				 <property>velocities/airspeed-kt</property>
				 <value>0</value>
			 </greater-than>
			  <greater-than>
			             <property>/gear/gear[1]/compression-norm</property>
                                            <value>0</value>
			 </greater-than>
	 </and>
	 </condition>
          
    <align>billboard</align>
    
    		<particle>
			<start>
				<color>
					<red>
						<value>0.95</value>
					</red>
					<green>
						<value>0.95</value>
					</green>
					<blue>
						<value>0.95</value>
					</blue>
					<alpha>
						<value>0.05</value>
					</alpha>
				</color>
				<size>
					<value>0.5</value>
				</size>
			</start>
			<end>
				<color>
					<red>
						<value>1</value>
					</red>
					<green>
						<value>1</value>
					</green>
					<blue>
						<value>1</value>
					</blue>
					<alpha>
						<value>0.020</value>
					</alpha>
				</color>
				<size>
					<value>10</value>
				</size>
			</end>
			<life-sec>
				<value>1</value>
			</life-sec>
			<mass-kg>0.025</mass-kg>
			<radius-m>0.175</radius-m>
		</particle>
    
    <program>
      <fluid>air</fluid>
      <gravity>enabled</gravity>
      <wind>enabled</wind>
    </program>
    
</particlesystem>
</PropertyList>
