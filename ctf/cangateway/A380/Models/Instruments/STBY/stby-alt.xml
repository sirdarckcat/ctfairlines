   <object-name>in10</object-name>
   <property>instrumentation/altimeter/setting-inhg</property>
   <factor>1.0</factor>
   <step>0.1</step>
   <bias>0.005</bias>
   <axis>
     <x>0</x>
     <y>1</y>
     <z>0</z>
   </axis>
 </animation>

  <animation>
   <type>textranslate</type>
