   </axis>
 </animation>

  <animation>
   <type>textranslate</type>
   <object-name>in1000</object-name>
   <property>instrumentation/altimeter/setting-inhg</property>
   <factor>0.01</factor>
   <step>10</step>
   <axis>
     <x>0</x>
     <y>1</y>
     <z>0</z>
   </axis>
 </animation>

  <animation>
   <type>textranslate</type>
